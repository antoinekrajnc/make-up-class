<%= form_for(makeup, :html => {:class => "d-flex flex-column justify-content-center"}) do |f| %>
  <% if makeup.errors.any? %>
    <div id="error_explanation">
      <h2 class="m-5 d-flex justify-content-center"><%= pluralize(makeup.errors.count, "error") %> prohibited this makeup from being saved:</h2>

      <ul>
      <% makeup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>

  <% end %>

  <div class="actions d-flex justify-content-center flex-column">
    <span class="d-flex justify-content-center"><strong><%= @spot_available %></strong></span>

    <% if @spot_available != "Sorry no spots available" %>
      <div class="m-2 d-flex justify-content-center flex-column">
        <h6 class="text-center mt-5">You are about to make up <strong><%= params[:clicked_day][0..2] %></strong> class in <strong><%= params[:clicked_cohort] %></strong> cohort. Click on confirm cohort if this information is correct</h6>
      </div>

      <div class="m-2 d-flex justify-content-center flex-column">
        <h6 class="text-center mt-5">Your class address is <strong><%= params[:location] %></strong></h6>
      </div>

      <div class="m-2 d-flex justify-content-center flex-column invisible">
        <%= f.label :clicked_cohort%>
        <span class="input-field"><%= f.text_field :clicked_cohort, :required => true, :value => params[:clicked_cohort] %></span>
      </div>
      <div class="m-2 d-flex justify-content-center flex-column invisible">
        <%= f.label :clicked_day%>
        <span class="input-field"><%= f.text_field :clicked_day, :required => true, :value => params[:clicked_day] %></span>
      </div>
      </ul>
    </div>

      <span class="submit-button d-flex justify-content-center"><%= f.submit "Confirm Makeup" %></span>
    <% end %>
  </div>
<% end %>
